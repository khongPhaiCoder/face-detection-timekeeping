<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>
    <main>
      <div class="container">
        <div class="action">
          <a href="/user/add" class="btn btn-success">Add user +</a>
          <table class="table">
            <thead>
              <tr>
                <!-- <th scope="col">ID</th> -->
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Salary base</th>
                <th scope="col">Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% let data = JSON.parse(list); %> <% for (let i = 0; i <
              data.length; i++) { %>
              <tr>
                <!-- <td><%= data[i]._id %></td> -->
                <td><%= data[i].name %></td>
                <td><%= data[i].email %></td>
                <td><%= data[i].salaryBase %></td>
                <td>
                  <a href="user/edit/<%= data[i]._id %>" class="btn btn-primary"
                    >Sửa</a
                  >
                  <a
                    href="/user/delete/<%= data[i]._id %>"
                    class="btn btn-danger"
                    >Xóa</a
                  >
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <div class="modal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <p>Modal body text goes here.</p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- <%- include('../partials/footer'); %> -->
  </body>
  <script>
    $(".modal .btn-close").click(function () {
      $(".modal").css("display", "block");
    });
  </script>
</html>
